<div class="row">
  <center>
    <div class="col-md-5">
      <h4 class="red_font">Your Order!</h4>
      <div id="ready_to_eat">
        {{#each burger}}
          {{#unless this.devoured}}
          <form action="/burgers/update/{{id}}" method="POST">
            <div class="input-group">
              <li class="form-control">{{id}}. {{burger_name}}</li>
                
                <span class="input-group-btn">
                  <button class="btn btn-warning devour-button" type="submit">Devour It!</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>
    <div class="col-md-7">
      <h4 class="red_font">Devoured!</h4>
      <div id="already_eaten">
        {{#each burger}}
          {{#if this.devoured}}
            <div class="input-group">
              <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
            </div>
          {{/if}}
        {{/each}}

      </div>
    </div>
    <form action="burger/create" method="POST"> 
        <div class="row">
          <div class="col-md-4"></div>
          <div class="form-group col-md-4">
            <center><label for="new_burger" class="red_font">Place a new order and submit!</label></center>
            <textarea class="form-control" columns="8" rows="1" id="new_burger" name="burger_name"></textarea>
          </div>
          <div class="col-md-4"></div> 
        </div>
        <center>
          <button id="submit-button" type="submit" class="btn btn-primary">Place Order</button>
        </center>

      </form>
  </center>

</div>